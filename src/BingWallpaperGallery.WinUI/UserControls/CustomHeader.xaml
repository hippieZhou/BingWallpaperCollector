<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="BingWallpaperGallery.WinUI.UserControls.CustomHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dto="using:BingWallpaperGallery.Core.DTOs"
    xmlns:ex="using:ImageEx"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    xmlns:local="using:BingWallpaperGallery.WinUI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <controls:OpacityMaskView
            Grid.Row="0"
            Height="420"
            Margin="-12,-24,0,0"
            CornerRadius="8,0,0,0">
            <controls:OpacityMaskView.OpacityMask>
                <Rectangle>
                    <Rectangle.Fill>
                        <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Offset="0" Color="#FFFFFFFF" />
                            <GradientStop Offset="0.05" Color="#FFFFFFFF" />
                            <GradientStop Offset="0.25" Color="#FFFFFFFF" />
                            <GradientStop Offset="0.55" Color="#FFFFFFFF" />
                            <GradientStop Offset="0.95" Color="#00FFFFFF" />
                            <GradientStop Offset="1" Color="#00FFFFFF" />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </controls:OpacityMaskView.OpacityMask>
            <controls:OpacityMaskView.Content>
                <Grid Height="420">
                    <ex:ImageEx
                        EnableLazyLoading="True"
                        IsCacheEnabled="True"
                        Source="{x:Bind Source, Mode=OneWay}"
                        Stretch="UniformToFill"
                        Visibility="{x:Bind Source, Mode=OneWay, Converter={StaticResource EmptyObjectToVisibilityConverter}}" />
                    <TextBlock
                        Margin="36,30"
                        Style="{ThemeResource SubtitleTextBlockStyle}"
                        Text="{x:Bind Subtitle, Mode=OneWay}"
                        Visibility="{x:Bind Subtitle, Mode=OneWay, Converter={StaticResource EmptyObjectToVisibilityConverter}}" />
                    <StackPanel
                        MaxWidth="520"
                        Margin="36,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                        <TextBlock
                            Style="{ThemeResource TitleTextBlockStyle}"
                            Text="{x:Bind Title, Mode=OneWay}"
                            Visibility="{x:Bind Title, Mode=OneWay, Converter={StaticResource EmptyObjectToVisibilityConverter}}" />
                        <TextBlock
                            Opacity="0.75"
                            Style="{ThemeResource BaseTextBlockStyle}"
                            Text="{x:Bind Desc}"
                            Visibility="{x:Bind Desc, Mode=OneWay, Converter={StaticResource EmptyObjectToVisibilityConverter}}" />
                        <Button Margin="0,36,0,0" Visibility="{x:Bind More, Mode=OneWay, Converter={StaticResource EmptyObjectToVisibilityConverter}}">
                            <StackPanel Padding="10,0" Orientation="Horizontal">
                                <FontIcon
                                    Margin="0,1,8,0"
                                    FontSize="14"
                                    Glyph="&#xE81D;" />
                                <TextBlock Text="{x:Bind More, Mode=OneWay}" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </controls:OpacityMaskView.Content>
        </controls:OpacityMaskView>

        <local:HorizontalScrollContainer
            Grid.Row="1"
            Height="48"
            Margin="0,12,36,0">
            <local:HorizontalScrollContainer.Source>
                <labs:TokenView
                    Margin="0,-16,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    CanRemoveTokens="False"
                    IsWrapped="False"
                    ItemsSource="{x:Bind ItemsSource, Mode=OneWay}"
                    SelectedItem="{x:Bind SelectedItem, Mode=TwoWay}"
                    SelectionMode="Single">
                    <labs:TokenView.ItemTemplate>
                        <DataTemplate x:DataType="dto:MarketInfoDto">
                            <Grid>
                                <TextBlock
                                    Margin="16,0,16,0"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind Name}"
                                    ToolTipService.ToolTip="{x:Bind Note}" />
                            </Grid>
                        </DataTemplate>
                    </labs:TokenView.ItemTemplate>
                </labs:TokenView>
            </local:HorizontalScrollContainer.Source>
        </local:HorizontalScrollContainer>

    </Grid>
</UserControl>
