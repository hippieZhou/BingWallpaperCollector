<windowex:WindowEx
    x:Class="BingWallpaperGallery.WinUI.ShellWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:BingWallpaperGallery.WinUI.Helpers"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:BingWallpaperGallery.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:triggers="using:CommunityToolkit.WinUI"
    xmlns:uc="using:BingWallpaperGallery.WinUI.UserControls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:windowex="using:WinUIEx"
    MinWidth="500"
    MinHeight="500"
    PersistenceId="MainWindow"
    mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt" />
    </Window.SystemBackdrop>

    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.OpacityTransition>
            <ScalarTransition Duration="0:0:0.083" />
        </Grid.OpacityTransition>

        <NavigationView
            x:Name="NavView"
            Grid.Row="1"
            Canvas.ZIndex="0"
            HighContrastAdjustment="None"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="True"
            SelectedItem="{x:Bind ViewModel.Selected, Mode=OneWay}"
            Style="{StaticResource StoreNavigationViewStyle}">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    helpers:NavigationHelper.NavigateTo="BingWallpaperGallery.WinUI.ViewModels.GalleryViewModel"
                    Content="画廊"
                    Icon="{ui:FontIcon Glyph=&#xE80F;}"
                    Tag="Gallery" />
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem
                    helpers:NavigationHelper.NavigateTo="BingWallpaperGallery.WinUI.ViewModels.DownloadViewModel"
                    Content="下载"
                    Icon="{ui:FontIcon Glyph=&#xEBD3;}"
                    Tag="Download" />
            </NavigationView.FooterMenuItems>
            <NavigationView.Content>
                <Grid>
                    <Frame x:Name="NavFrame" />
                    <uc:InAppNotification
                        x:Name="InAppNotification"
                        Margin="0,0,24,24"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom" />
                </Grid>
            </NavigationView.Content>
        </NavigationView>

        <TitleBar
            x:Name="AppTitleBar"
            Title="必应壁纸"
            Grid.Row="0"
            Height="48"
            IconSource="{ui:BitmapIconSource ShowAsMonochrome=False,
                                             Source=ms-appx:///Assets/WindowIcon.ico}"
            IsBackButtonEnabled="{x:Bind ViewModel.IsBackEnabled, Mode=OneWay}"
            IsBackButtonVisible="{x:Bind ViewModel.IsBackEnabled, Mode=OneWay}"
            IsTabStop="False">
            <i:Interaction.Behaviors>
                <i:EventTriggerBehavior EventName="BackRequested">
                    <i:InvokeCommandAction Command="{x:Bind ViewModel.BackRequestedCommand}" />
                </i:EventTriggerBehavior>
            </i:Interaction.Behaviors>
            <TitleBar.RightHeader>
                <uc:LoadingButton Command="{x:Bind ViewModel.FetchRequestCommand}" />
            </TitleBar.RightHeader>
        </TitleBar>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="connected">
                    <VisualState.StateTriggers>
                        <triggers:NetworkConnectionStateTrigger ConnectionState="Connected" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NavView.Visibility" Value="Visibility" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="disconnected">
                    <VisualState.StateTriggers>
                        <triggers:NetworkConnectionStateTrigger ConnectionState="Disconnected" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NavView.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</windowex:WindowEx>
